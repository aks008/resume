    <style>
        /* Black and Light Black Gradient Background */

        /* Header Styling */
        h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-align: center;
            color: #ecf0f1;
            /* Light gray text */
            letter-spacing: 5px;
            margin-bottom: 50px;
            margin-top: 0%;
            animation: fadeIn 3s ease-out;
        }

        /* Header Styling */
        h3 {
            text-align: center;
            color: #ecf0f1;
            /* Light gray text */

        }

        /* Header Animation */
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-50px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Floating Animated Shapes */
        .shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 10s infinite ease-in-out;
        }

        .shape.circle {
            width: 220px;
            height: 220px;
            top: 10%;
            left: 15%;
            animation-duration: 8s;
            animation-delay: 2s;
        }

        .shape.circle2 {
            width: 180px;
            height: 180px;
            bottom: 10%;
            right: 20%;
            animation-duration: 12s;
            animation-delay: 4s;
        }

        .shape.square {
            width: 120px;
            height: 120px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            top: 50%;
            left: 70%;
            animation: rotateAndFloat 12s infinite ease-in-out;
        }

        /* Floating animation */
        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-30px);
            }
        }

        /* Rotating and floating effect */
        @keyframes rotateAndFloat {

            0%,
            100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-30px) rotate(45deg);
            }
        }

        /* Content Container for Text and Button */
        .content-container {
            position: relative;
            z-index: 10;
            text-align: center;
            margin-top: -80px;
        }



        /* Footer Section */
        .footer {
            position: absolute;
            bottom: 5%;
            width: 100%;
            text-align: center;
            color: #ecf0f1;
            font-size: 0.9rem;
        }

        /* Particle Effect */
        .particle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            pointer-events: none;
            animation: moveParticles 3s infinite;
        }

        @keyframes moveParticles {
            0% {
                transform: translate(0, 0);
                opacity: 1;
            }

            100% {
                transform: translate(200px, 200px);
                opacity: 0;
            }
        }

